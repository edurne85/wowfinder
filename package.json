{
  "name": "wowfinder-companion",
  "author": "Edurne Pascual <herenvardo@gmail.com>",
  "version": "1.0.0-alpha.2",
  "description": "Utility app for players and GMs of the WowFinder campaign",
  "main": "./.webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "release": "electron-forge publish",
    "lint": "eslint . --ext js,ts,tsx",
    "lint-fix": "eslint . --fix --ext js,ts,tsx",
    "cloc": "cloc -v src/ --by-file --include-lang=TypeScript",
    "test": "jest --passWithNoTests"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "archiver": "^5.3.1",
    "i18next": "^22.4.13",
    "i18next-browser-languagedetector": "^7.0.1",
    "json5": "^2.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "react-i18next": "^12.2.0",
    "react-router-dom": "^6.9.0",
    "styled-components": "^5.3.9"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.19.0",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "@electron-forge/cli": "^6.1.0",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.1.0",
    "@electron-forge/maker-zip": "^6.1.0",
    "@electron-forge/plugin-webpack": "^6.0.4",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@types/archiver": "^5.3.2",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^27.5.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.56.0",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^23.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.3",
    "jest": "^27.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "ts-jest": "^27.0.3",
    "typescript": "^4.9.4",
    "wait-on": "^7.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "WowFinder Companion",
        "executableName": "wowfinder",
        "icon": "assets/icon",
        "extraResource": [
          "assets"
        ]
      },
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack/main.webpack.js",
            "renderer": {
              "config": "./webpack/renderer.webpack.js",
              "entryPoints": [
                {
                  "main": ".webpack/main",
                  "html": "./public/index.html",
                  "js": "./src/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/bridge.ts"
                  }
                }
              ]
            }
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ElectronStarter"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}

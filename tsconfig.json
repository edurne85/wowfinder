{
    "compilerOptions": {
        "target": "es2021",
        "allowJs": true,
        "module": "commonjs",
        "lib": ["dom", "es2015", "es2016", "es2017", "es2019"],
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "@components/*": ["components/*"],
            "@hooks": ["hooks"],
            "@model/*": ["types/*"],
            "@utils/*": ["utils/*"],
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.test.ts*"]
}
